<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.sadarik.gestoractividadeszvergeles.FragmentoDetalle"
    android:orientation="vertical"
    android:background="@drawable/ic_splash">

    <!-- TODO: Update blank fragment layout -->

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView2" >

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:id="@+id/imageView"
                android:src="@drawable/ic_launcher"
                android:layout_marginTop="10dp"
                android:layout_gravity="right"
                android:layout_marginRight="10dp" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="10dp">

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/tvDescripcion"
                    android:id="@+id/textView"
                    android:textSize="25dp"
                    android:gravity="center_horizontal"
                    android:textColor="#ff000000" />

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/scrollView"
                    android:fillViewport="false"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/tvDescripcion"
                        android:textSize="25dp"
                        android:textColor="#ff000000" />
                </ScrollView>

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:weightSum="1">

                <TextView
                    android:layout_width="109dp"
                    android:layout_height="wrap_content"
                    android:text="@string/tvProfesor"
                    android:id="@+id/textView5"
                    android:textSize="25dp"
                    android:layout_marginRight="15dp"
                    android:layout_weight="0.05"
                    android:textColor="#ff000000"
                    android:layout_marginLeft="20dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvProfesor"
                    android:layout_marginLeft="30dp"
                    android:textSize="25dp"
                    android:textColor="#ff000000" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:weightSum="1">

                <TextView
                    android:layout_width="127dp"
                    android:layout_height="wrap_content"
                    android:text="@string/tvDepartamento"
                    android:id="@+id/textView2"
                    android:textSize="25dp"
                    android:layout_marginRight="15dp"
                    android:layout_weight="0.06"
                    android:textColor="#ff000000"
                    android:layout_marginLeft="20dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvDepartamento"
                    android:layout_marginLeft="12dp"
                    android:textSize="25dp"
                    android:textColor="#ff000000" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp">

                <TextView
                    android:layout_width="140dp"
                    android:layout_height="wrap_content"
                    android:text="@string/tvGrupo"
                    android:id="@+id/textView4"
                    android:textSize="25dp"
                    android:layout_marginRight="15dp"
                    android:textColor="#ff000000"
                    android:layout_marginLeft="20dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvGrupo"
                    android:textSize="25dp"
                    android:textColor="#ff000000"
                    android:layout_marginLeft="47dp" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:visibility="visible"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="invisible"
                    android:id="@+id/layoutExtraescolar"
                    >

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/tvFecha"
                            android:textSize="25dp"
                            android:layout_marginRight="15dp"
                            android:textColor="#ff000000"
                            android:layout_marginLeft="20dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/tvEFechai"
                            android:textSize="25dp"
                            android:textColor="#ff000000" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/tvHoraHasta"
                            android:id="@+id/textView110"
                            android:textSize="25dp"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="15dp"
                            android:textColor="#ff000000" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/tvEFechaf"
                            android:textSize="25dp"
                            android:textColor="#ff000000" />

                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/tvLugarS"
                            android:id="@+id/textView21"
                            android:textSize="25dp"
                            android:layout_marginRight="15dp"
                            android:textColor="#ff000000"
                            android:layout_marginLeft="20dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/tvELugari"
                            android:textSize="25dp"
                            android:textColor="#ff000000" />

                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/tvLugarR"
                            android:id="@+id/textView12"
                            android:textSize="25dp"
                            android:layout_marginRight="15dp"
                            android:textColor="#ff000000"
                            android:layout_marginLeft="20dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/tvELugarf"
                            android:textSize="25dp"
                            android:textColor="#ff000000" />

                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/tvHora"
                            android:id="@+id/textView20"
                            android:textSize="25dp"
                            android:layout_marginRight="15dp"
                            android:textColor="#ff000000"
                            android:layout_marginLeft="20dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/tvEHorai"
                            android:textSize="25dp"
                            android:textColor="#ff000000" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/tvHoraHasta"
                            android:id="@+id/textView25"
                            android:textSize="25dp"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="15dp"
                            android:textColor="#ff000000" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/tvEHoraf"
                            android:textSize="25dp"
                            android:textColor="#ff000000" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/layoutComplementaria"
                    android:visibility="visible">


                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/tvFecha"
                            android:id="@+id/textView7"
                            android:textSize="25dp"
                            android:layout_marginRight="15dp"
                            android:textColor="#ff000000"
                            android:layout_marginLeft="20dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/tvCFecha"
                            android:textSize="25dp"
                            android:textColor="#ff000000" />

                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/tvLugar"
                            android:id="@+id/textView15"
                            android:textSize="25dp"
                            android:layout_marginRight="15dp"
                            android:textColor="#ff000000"
                            android:layout_marginLeft="20dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/tvCLugar"
                            android:textSize="25dp"
                            android:textColor="#ff000000" />

                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_marginTop="5dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/tvHora"
                            android:id="@+id/textView9"
                            android:textSize="25dp"
                            android:layout_marginRight="15dp"
                            android:textColor="#ff000000"
                            android:layout_marginLeft="20dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/tvCHorai"
                            android:textSize="25dp"
                            android:textColor="#ff000000" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/tvHoraHasta"
                            android:id="@+id/textView14"
                            android:textSize="25dp"
                            android:layout_marginRight="15dp"
                            android:layout_marginLeft="20dp"
                            android:textColor="#ff000000" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/tvCHoraf"
                            android:textSize="25dp"
                            android:textColor="#ff000000" />

                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
